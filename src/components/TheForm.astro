---
import { H2, H3, P } from "ui";

interface Props {
  success?: boolean;
  id?: string;
}

const { success = false, id } = Astro.props;
---

<div class="form">
  {
    success ? (
      <>
        <H2>СПАСИБО ЗА ЗАЯВКУ!</H2>
        <P>
          Наши менеджеры перезвонят Вам для <br /> уточнения деталей!
        </P>
      </>
    ) : (
      <>
        <H2>Рассчитайте стоимость перегородок</H2>
        <P>
          Наши специалисты свяжуться с Вами для уточнения деталей по Вашему
          проекту, <br /> и предоставят расчет в течении дня
        </P>

        <form class="the-form" id={id}>
          <input type="text" name="name" placeholder="Ваше имя" required />
          <input
            type="text"
            name="phone"
            placeholder="Ваш номер телефона"
            required
          />
          <input type="email" name="email" placeholder="Ваш E-mail" />
          <button type="submit" class="btn">
            Отправить
          </button>
        </form>

        <div class="text-xs">
          Отправляя форму вы соглашаетесь с
          <a href="#">Политикой конфиденциальности</a>
        </div>
      </>
    )
  }
</div>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .form {
    width: 100%;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: rem(30);

    @include media("sm") {
      gap: rem(20);
    }

    .text-h2 {
      color: #fff;
    }

    .text-p {
      @include media("lg") {
        br {
          display: none;
        }
      }
    }

    .text-xs {
      font-size: rem(12);
      font-weight: 300;

      a {
        text-decoration: underline;
      }
    }

    form {
      margin-top: rem(20);
      width: 100%;
      max-width: rem(435);
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(25);

      @include media("lg") {
        margin-top: 0;
        max-width: 100%;
      }
      @include media("xs") {
        gap: rem(15);
      }
    }

    input {
      padding: 0 rem(18);
      width: 100%;
      height: rem(40);
      color: #fff;
      font-size: 1rem;
      font-weight: 300;
      border: rem(1) solid #fff;
      border-radius: 9999px;

      &::placeholder {
        color: #fff;
        transition: var(--transition-ease);
      }

      &:focus {
        &::placeholder {
          transform: translateX(-50%);
        }
      }
    }

    button {
      margin-top: rem(5);
      width: rem(230);
      height: rem(40);
      font-weight: 300;
      background: var(--primary);
      border: rem(1) solid #fff;
      border-radius: 9999px;

      &:hover {
        opacity: 0.85;
      }
    }
  }
</style>
