---
import { H2, Image, Icon, Button } from "ui";
import "./index.scss";
---

<header class="header">
  <div class="header__top">
    <div class="container">
      <a href="/" class="header__logo">
        <Image src="logo.svg" alt="logo" />
      </a>

      <nav class="header__menu">
        <ul class="menu">
          <li class="menu-item"><a href="/">Главная</a></li>
          <li class="menu-item"><a href="/services">Услуги</a></li>
          <li class="menu-item"><a href="/portfolio">Наши работы</a></li>
          <li class="menu-item"><a href="/contacts">Контакты</a></li>
        </ul>
      </nav>

      <div class="header__contacts">
        <div class="group">
          <div class="group-city">Москва</div>
          <p class="group-address">
            Варшавское шоссе, 150, корп. 2 БЦ “Селектика”
          </p>
          <a
            href="tel:+79854343433"
            target="_blank"
            class="group-phone"
            title="Телефон">+7 (985) 434-34-33</a
          >
          <a
            href="mailto:msc@profstek.ru"
            target="_blank"
            class="group-email"
            title="Почта">msc@profstek.ru</a
          >
        </div>

        <div class="group">
          <div class="group-city">Санкт-Петербург</div>
          <p class="group-address">Ул. Зольная, д.15 БЦ  “Морская столица”</p>
          <a
            href="tel:+79990210070"
            target="_blank"
            class="group-phone"
            title="Телефон">+7 (999) 021-00-70</a
          >
          <a
            href="mailto:spb@profstek.ru"
            target="_blank"
            class="group-email"
            title="Почта">spb@profstek.ru</a
          >
        </div>
      </div>

      <Button variant="outline" data-modal="callback">Оставить заявку</Button>
    </div>
  </div>

  <div class="header__catalog">
    <div class="container">
      <div class="header__catalog-item">
        <a href="#" class="header__catalog-link">
          <Icon src="partition.svg" />
          <span>Перегородки</span>
        </a>
      </div>

      <div class="header__catalog-item">
        <a href="#" class="header__catalog-link">
          <Icon src="glass.svg" />
          <span>Двери</span>
        </a>
      </div>

      <div class="header__catalog-item">
        <a href="#" class="header__catalog-link">
          <Icon src="window.svg" />
          <span>Жалюзи</span>
        </a>
      </div>

      <div class="header__catalog-item">
        <a href="#" class="header__catalog-link">
          <Icon src="iron.svg" />
          <span>Профильные системы</span>
        </a>
      </div>

      <div class="header__catalog-item">
        <a href="#" class="header__catalog-link">
          <Icon src="square.svg" />
          <span>Потолочные системы</span>
        </a>
      </div>
    </div>
  </div>

  <div class="mobile__menu">
    <div class="mobile__menu-tabs">
      <div
        class="mobile__menu-tab"
        id="tab"
        data-toggle="menu"
        role="button"
        tabindex="0"
        aria-label="Меню"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 20 20"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
