          center/contain no-repeat;

        @include media("3xl") {
          transform: translate(0%, -100%);
          width: rem(100);
          height: rem(80);
        }
        @include media(rem(980)) {
          top: rem(-5);
          width: rem(30);
          height: rem(25);
        }
      }
    }

    &__desc {
      font-size: rem(25);
      font-family: var(--font-museo);

      @include media("3xl") {
        font-size: rem(20);
      }
      @include media("xl") {
        font-size: 1rem;
      }
      @include media("lg") {
        font-size: rem(14);
      }
    }

    &__ceo {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: rem(8);

      &-name {
        color: var(--primary);
        font-size: rem(35);
        font-weight: 700;
        font-family: var(--font-museo);

        @include media("3xl") {
          font-size: rem(30);
        }
        @include media("lg") {
          font-size: rem(28);
        }
      }

      &-position {
        font-size: rem(25);
        font-weight: 500;
        font-family: var(--font-museo);

        @include media("3xl") {
          font-size: rem(20);
        }
        @include media("lg") {
          font-size: 1rem;
        }
      }
    }

    &__img {
      position: relative;
      flex-grow: 1;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      --img-width: #{rem(350)};

      @include media("3xl") {
        --img-width: #{rem(320)};
      }
      @include media("xl") {
        --img-width: #{rem(240)};
      }
      @include media(rem(980)) {
        width: 100%;
      }
      @include media(rem(580)) {
        padding: rem(15);
        flex-direction: column;
        align-items: flex-start;
      }

      &::before {
        content: "";
        position: absolute;
        top: rem(-20);
        left: rem(-20);
        z-index: -1;
        height: 100%;
        width: var(--img-width);
        border: rem(2) solid var(--primary);

        @include media("xl") {
          top: rem(-12);
          left: rem(-12);
        }
        @include media(rem(580)) {
          top: rem(3);
          left: rem(3);
          height: rem(330);
        }
      }

      &::after {
        content: "";
        position: absolute;
        top: 0;
        left: var(--img-width);
        z-index: -2;
        height: 100%;
        width: 100%;
        background: url("/assets/img/ceo-bg.png") center/cover no-repeat;

        @include media(rem(580)) {
          display: none;
        }
      }

      img {
        width: var(--img-width);
        height: auto;
      }

      button {
        position: relative;
        padding: rem(20) rem(50);
        background: #fff;
        box-shadow: 0 2px 67px 0 rgba(0, 0, 0, 0.25);
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: rem(20);
        --icon-size: #{rem(70)};

        @include media("3xl") {
          padding: rem(20) rem(30) rem(50);
          --icon-size: #{rem(74)};

          .icon {
            position: absolute;
            left: 50%;
            top: 100%;
            transform: translate(-50%, -50%);
          }
        }
        @include media("2xl") {
          padding-bottom: rem(40);
          --icon-size: #{rem(60)};
        }
        @include media("lg") {
          padding: rem(15) rem(15) rem(40);
        }
        @include media(rem(980)) {
          padding: rem(20);

          .icon {
            position: static;
            transform: translate(0, 0);
          }
        }
        @include media(rem(580)) {
          padding: rem(15) 0;
          width: 100%;
          background: transparent;
          box-shadow: unset;
          --icon-size: #{rem(54)};
        }

        span {
          color: var(--primary);
          font-size: rem(20);
          text-align: left;
          line-height: 1.35;

          @include media("2xl") {
            font-size: 1rem;
          }
          @include media(rem(580)) {
            font-size: rem(18);
          }
          @include media("xss") {
            font-size: 1rem;
          }
        }
      }
    }
  }
</style>
