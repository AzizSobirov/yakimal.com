            center/cover no-repeat;

          @include media("sm") {
            transform: translate(75%, 0);
          }
        }

        &::after {
          content: "";
          position: absolute;
          top: 0;
          right: rem(1);
          z-index: -1;
          transform: translate(100%, 0);
          height: 100%;
          width: 50vw;
          background: var(--primary);
        }
      }

      &-list {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: rem(40) rem(20);

        @include media("2xl") {
          grid-template-columns: repeat(4, 1fr);
        }
        @include media("lg") {
          grid-template-columns: repeat(3, 1fr);
        }
        @include media("md") {
          grid-template-columns: repeat(2, 1fr);
          gap: rem(30) rem(12);
        }
      }

      .product {
        .product__weight,
        .product__location {
          font-size: rem(18) !important;
        }
      }
    }
  }
</style>
