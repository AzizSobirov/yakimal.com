  .follow {
    position: relative;

    &__content {
      position: relative;
      padding: rem(15) rem(38);
      margin: 0 auto;
      border: rem(3) solid var(--primary);
      gap: rem(300);

      @include media("xl") {
        padding: rem(10) rem(30);
        width: 100%;
        justify-content: space-between;
        gap: rem(50);
      }
      @include media(rem(980)) {
        border-width: rem(2);
      }
      @include media(rem(880)) {
        padding: rem(10) rem(15);
      }

