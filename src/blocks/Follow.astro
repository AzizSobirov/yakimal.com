        position: relative;
        width: 100%;
        max-width: rem(575);
        font-size: rem(18);
        line-height: 1.75;
        text-transform: uppercase;

        @include media("lg") {
          max-width: rem(508);
          font-size: 1rem;
        }
        @include media(rem(880)) {
          position: static;
          max-width: 80%;
          font-size: rem(14);
        }

