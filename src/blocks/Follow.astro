          @include media("xl") {
            top: 50%;
            width: rem(168);
            height: rem(48);
          }
          @include media("lg") {
            top: 35%;
            right: rem(40);
          }
          @include media(rem(880)) {
            top: auto;
            bottom: rem(10);
            right: rem(10);
            transform: translate(0, 0);
            width: rem(105);
            height: rem(30);
          }
          @include media("xs") {
            width: rem(75);
            height: rem(25);
          }
        }

        a {
          color: var(--primary);
        }
      }

      &-img {
        width: rem(170);
        height: rem(170);

        @include media("lg") {
          width: rem(105);
          height: rem(105);
        }
        @include media(rem(880)) {
          display: none;
        }

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
      }
    }
  }
