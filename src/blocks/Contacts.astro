      &-iframe {
        width: 100%;
        height: 100%;
        border: none;

        @include media(rem(980)) {
          height: rem(350);
        }
        @include media("sm") {
          height: rem(285);
        }
      }
    }

    &__content {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(50);

      @include media("xl") {
        gap: rem(30);
      }
      @include media(rem(980)) {
        margin-top: rem(10);
      }
    }

    &__list {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(40);

      @include media("xl") {
        gap: rem(20);
      }
    }

    &__item {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(10);

      &-label {
        font-size: rem(18);
        text-transform: uppercase;

        @include media("xl") {
          font-size: 1rem;
        }
      }

      &-link {
        color: var(--primary);
        font-size: rem(20);
        font-family: var(--font-montserrat);
        text-transform: uppercase;

        @include media("xl") {
          font-size: 1rem;
        }
        @include media(rem(980)) {
          font-size: rem(14);
        }
      }
    }

    &__desc {
      font-size: rem(18);
      line-height: 1.5;
      text-transform: uppercase;

      @include media("xl") {
        font-size: 1rem;
      }
      @include media("lg") {
        font-size: rem(14);
      }
    }

    &__qr-codes {
      display: flex;
      align-items: center;
      gap: rem(50);

      @include media("xs") {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: rem(40);
      }

      img {
        width: rem(200);
        height: rem(200);
        object-fit: contain;

        @include media("lg") {
          width: rem(185);
          height: rem(185);
        }
        @include media("xs") {
          width: 100%;
          height: auto;
        }
      }
    }

    &__right {
      position: absolute;
      top: rem(-80);
      right: rem(250);

      @include media("3xl") {
        top: rem(-20);
        right: rem(180);
      }
      @include media("xl") {
        top: 0;
        right: rem(120);
      }
      @include media(rem(980)) {
        display: none;
      }

      &::before,
      &::after {
        content: "";
        position: absolute;
        z-index: -1;
      }

      &::before {
        top: 50%;
        transform: translate(4%, -50%);
        width: rem(700);
        height: rem(700);
        background: var(--primary-lighter);
        border-radius: 50%;

        @include media("3xl") {
          width: rem(600);
          height: rem(600);
        }
        @include media("xl") {
          width: rem(500);
          height: rem(500);
        }
      }

      &::after {
        bottom: rem(-100);
        left: rem(120);
        width: rem(146);
        height: rem(216);
        background: url('data:image/svg+xml,<svg width="146" height="216" viewBox="0 0 146 216" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="6" cy="6" r="6" fill="%23585359"/><circle cx="6" cy="74" r="6" fill="%23585359"/><circle cx="6" cy="142" r="6" fill="%23585359"/><circle cx="6" cy="210" r="6" fill="%23585359"/><circle cx="73" cy="6" r="6" fill="%23585359"/><circle cx="73" cy="74" r="6" fill="%23585359"/><circle cx="73" cy="142" r="6" fill="%23585359"/><circle cx="73" cy="210" r="6" fill="%23585359"/><circle cx="140" cy="6" r="6" fill="%23585359"/><circle cx="140" cy="74" r="6" fill="%23585359"/><circle cx="140" cy="142" r="6" fill="%23585359"/><circle cx="140" cy="210" r="6" fill="%23585359"/></svg>')
          center/contain no-repeat;

        @include media("3xl") {
          display: none;
        }
      }

      span {
        color: var(--primary);
        font-size: rem(62);
        writing-mode: vertical-rl;
        line-height: 1;

        @include media("3xl") {
          font-size: rem(48);
        }
        @include media("xl") {
          font-size: rem(32);
        }
      }
    }
  }
</style>
