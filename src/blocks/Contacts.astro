  .contacts {
    position: relative;
    margin-top: rem(80);

    @include media("3xl") {
      margin-top: rem(50);
    }
    @include media("sm") {
      margin-top: rem(30);
    }

    .container {
      @include media("xl") {
        gap: rem(35);
      }
      @include media("sm") {
        gap: rem(25);
      }
    }

    .wrapper {
      width: 100%;
      display: grid;
      grid-template-columns: 0.9fr 1.1fr;
      gap: rem(20);

      @include media(rem(980)) {
        grid-template-columns: 1fr;
      }
    }

    &__map {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: rem(20);

      @include media(rem(980)) {
        grid-template-columns: 1fr;
      }

      &-logos {
