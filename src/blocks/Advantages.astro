---
import { Section, H2, H3, P, Image, Icon, Button } from "ui";
---

<!-- Advantages -->
<Section name="advantages">
  <H2>что вы <strong>получаете</strong></H2>

  <div class="advantages__list">
    <div class="advantages__item">
      <div class="advantages__item-icon">
        <Icon src="product.svg" />
      </div>
      <div class="advantages__item-title">Брендирование под вашу СТМ</div>
    </div>

    <div class="advantages__item">
      <div class="advantages__item-icon">
        <Icon src="pen.svg" />
      </div>
      <div class="advantages__item-title">Готовый дизайн "под ключ"</div>
    </div>

    <div class="advantages__item">
      <div class="advantages__item-icon">
        <Icon src="discount.svg" />
      </div>
      <div class="advantages__item-title">Специальную цену</div>
    </div>

    <div class="advantages__item">
      <div class="advantages__item-icon">
        <Icon src="box-star.svg" />
      </div>
      <div class="advantages__item-title">
        Качественный, проверенный продукт
      </div>
    </div>

    <div class="advantages__item">
      <div class="advantages__item-icon">
        <Icon src="gift-box.svg" />
      </div>
      <div class="advantages__item-title">
        Удобную и привлекательную упаковку
      </div>
    </div>

    <div class="advantages__item">
      <div class="advantages__item-icon">
        <Icon src="truck.svg" />
      </div>
      <div class="advantages__item-title">Стабильные отгрузки по графику</div>
    </div>
  </div>
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .advantages {
    position: relative;

    &__list {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: rem(60) rem(20);

      @include media("xl") {
        gap: rem(40) rem(20);
      }
      @include media(rem(980)) {
        grid-template-columns: repeat(2, 1fr);
        gap: rem(30);
      }
      @include media("sm") {
        grid-template-columns: 1fr;
        gap: rem(20);
      }
    }

    &__item {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: rem(20);

      &:last-child {
        .advantages__item-icon {
          padding-top: rem(5);
          --icon-size: 90%;
        }
      }

      &-icon {
        padding: rem(15);
        min-width: rem(130);
        width: rem(130);
        height: rem(130);
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--primary);
        border-radius: 50%;
        --icon-size: 100%;

        @include media("xl") {
          padding: rem(10);
          min-width: rem(65);
          width: rem(65);
          height: rem(65);
        }
      }

      &-title {
        font-size: rem(20);
        font-weight: 700;
        text-transform: uppercase;

        @include media("xl") {
          font-size: 1rem;
        }
      }
    }
  }
</style>
