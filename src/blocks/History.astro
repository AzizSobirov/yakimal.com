<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .history {
    position: relative;

    &__title {
      margin-top: rem(50);
      opacity: 0;
      animation: fadeInUp 1s ease-out 0.5s forwards;

      @include media("3xl") {
        margin-top: rem(20);
      }
      @include media("xl") {
        font-size: rem(36);
      }
      @include media("lg") {
        font-size: rem(26);
      }
    }

    &__bg {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: rem(775);

      @include media("3xl") {
        height: rem(650);
      }
      @include media("2xl") {
        margin-top: rem(20);
        height: rem(550);
      }
      @include media("xl") {
        margin-top: rem(50);
        height: rem(500);
      }
      @include media(rem(980)) {
        margin-top: rem(110);
      }
      @include media("md") {
        height: rem(450);
      }
      @include media("sm") {
        height: rem(400);
      }
      @include media("xs") {
        height: rem(380);
      }
      @include media(rem(375)) {
        height: rem(350);
      }

      &-sun {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%) translateY(50px);
        width: rem(625);
        height: auto;
        z-index: -1;
        opacity: 0;
        animation: sunRiseUp 1.8s ease-out 2.3s forwards;

        @include media("3xl") {
          width: 30%;
        }
        @include media("xl") {
          width: 40%;
        }
        @include media("sm") {
          width: 55%;
        }
        @include media("xs") {
          width: 75%;
        }
      }

      &-mountains {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%) translateY(100%);
        width: 100%;
        height: auto;
        z-index: -1;
        animation: slideInUp 1.5s ease-out 1s forwards;

        @include media("xl") {
          width: 120%;
        }
        @include media(rem(980)) {
          width: 150%;
        }
        @include media("xs") {
          width: 200%;
        }
      }

      &-cloud {
        position: absolute;
        z-index: -1;
        opacity: 0;
        transform: translateX(-20px);

        @include media("xl") {
          width: rem(194);
          height: auto;
        }
        @include media("md") {
          width: rem(120);
        }
        @include media("xs") {
          width: rem(80);
        }

        &--1 {
          top: 40%;
          left: 5%;
          animation: fadeInSlideRight 0.8s ease-out 3s forwards;

          @include media("xs") {
            left: 2%;
          }
        }

        &--2 {
          top: 15%;
          left: 75%;
          animation: fadeInSlideRight 0.8s ease-out 3.3s forwards;

          @include media("xs") {
            left: 80%;
          }
        }

        &--3 {
          top: 55%;
          left: 85%;
          animation: fadeInSlideRight 0.8s ease-out 3.6s forwards;
        }
      }
    }

    &__desc {
      position: relative;
      margin: rem(380) auto 0;
      max-width: rem(715);
      text-align: center;
      opacity: 0;
      animation: fadeInUp 1s ease-out 2s forwards;

      @include media("3xl") {
        margin-top: rem(350);
      }
      @include media("2xl") {
        margin-top: rem(280);
      }
      @include media("lg") {
        margin-top: rem(320);
        max-width: rem(600);
      }
      @include media(rem(880)) {
        max-width: rem(500);
      }
      @include media("xs") {
        margin-top: rem(300);
      }

      &::after {
        content: "";
        position: absolute;
        bottom: rem(-12);
        left: 50%;
        transform: translateX(-50%) scaleX(0);
        height: rem(1);
        width: 30%;
        background: var(--primary);
        animation: scaleInX 0.8s ease-out 3.5s forwards;
      }
    }

    // Keyframes for animations
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInScale {
      from {
        opacity: 0;
        transform: translateX(-50%) scale(0.8);
      }
      to {
        opacity: 1;
        transform: translateX(-50%) scale(1);
      }
    }

    @keyframes sunRiseUp {
      0% {
        opacity: 0;
        transform: translateX(-50%) translateY(80px);
      }
      30% {
        opacity: 0.3;
        transform: translateX(-50%) translateY(60px);
      }
      60% {
        opacity: 0.7;
        transform: translateX(-50%) translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
      }
    }

    @keyframes slideInUp {
      from {
        transform: translateX(-50%) translateY(100%);
      }
      to {
        transform: translateX(-50%) translateY(0);
      }
    }

    @keyframes fadeInSlideRight {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes scaleInX {
      from {
        transform: translateX(-50%) scaleX(0);
      }
      to {
        transform: translateX(-50%) scaleX(1);
      }
    }
  }
</style>
